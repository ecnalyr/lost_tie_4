<%= simple_form_for(@entry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :image_url %>
    <%= f.input :blog_url %>
    <%= f.association :categories %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
